<p id="notice"><%= notice %></p>
<% if user_signed_in? %>
    <div class="pull-right">
      <%= button_to "Dashboard", home_events_path, :method => "get", :class=> "btn btn-primary" %>
    </div>
<% end %>
<h1 class= "text-center">Listing of all the Events</h1>
    
<hr>

<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @events %>
    </div>
    <%= will_paginate @events, :container => false %>
  </div>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= link_to "Title", :sort => "title" %></th>
      <th><%= link_to "Description", :sort => "description" %></th>
      <th><%= link_to "Date", :sort => "date" %></th>
      <th><%= link_to "Start Time", :sort => "start_time" %></th>
      <th><%= link_to "End Time", :sort => "end_time" %></th>
      <th><%= link_to "Address", :sort => "address" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= event.address %></td>
        <td><%= link_to 'Show', event %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

