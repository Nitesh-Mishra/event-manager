<p id="notice"><%= notice %></p>
<% if user_signed_in? %>
    <div class="pull-right">
      <%= button_to "Dashboard", home_events_path, :method => "get", :class=> "btn btn-primary" %>
    </div>
<% end %>
<h1 class= "text-center">Listing of all the Events</h1>
    
<hr>
<%= will_paginate @events %>  
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= event.address %></td>
        <td><%= link_to 'Show', event %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

